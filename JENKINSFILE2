pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t jenkins-test1/jenkins-test1 .'
      }
    }
  }
  post {
    always {
      script {
        // Change ownership and permissions of the Docker socket
        sh 'sudo chown jenkins:docker /var/run/docker.sock'
        sh 'sudo chmod 660 /var/run/docker.sock'
      }
    }
  }
}
